{
    "name": "@tsip/types",
    "version": "0.4.0",
    "description": "Curated collection of TypeScript interfaces for common functionalities, promoting code reusability, interoperability, and best practices across the ecosystem",
    "keywords": [
        "typescript",
        "interfaces",
        "types",
        "proposals",
        "standardization",
        "abstractions",
        "interoperability",
        "reusability",
        "best-practices"
    ],
    "author": "Maksim Zemskov <maxaz74@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Nodge/tsip/issues"
    },
    "homepage": "https://github.com/Nodge/tsip/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Nodge/tsip.git"
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "pnpm@10.18.2",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "import": {
                "types": "./dist/index.d.mts",
                "default": "./dist/index.mjs"
            },
            "default": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            }
        },
        "./tests": {
            "import": {
                "types": "./dist/tests.d.mts",
                "default": "./dist/tests.mjs"
            },
            "default": {
                "types": "./dist/tests.d.ts",
                "default": "./dist/tests.js"
            }
        }
    },
    "files": [
        "README.md",
        "CHANGELOG.md",
        "LICENSE",
        "dist"
    ],
    "sideEffects": false,
    "scripts": {
        "build": "tsup",
        "lint": "eslint .",
        "fmt": "prettier --write . --log-level error",
        "typecheck": "tsc --noEmit",
        "changeset": "changeset add",
        "ci:release": "pnpm run build && pnpm exec changeset publish"
    },
    "devDependencies": {
        "@changesets/changelog-github": "0.5.1",
        "@changesets/cli": "2.29.7",
        "@eslint/js": "9.36.0",
        "@types/eslint": "9.6.1",
        "@types/node": "22.18.9",
        "@vitest/spy": "3.2.4",
        "eslint": "9.36.0",
        "lefthook": "1.13.4",
        "prettier": "3.6.2",
        "tsup": "8.5.0",
        "typescript": "5.9.2",
        "typescript-eslint": "8.44.1",
        "vitest": "3.2.4"
    }
}
